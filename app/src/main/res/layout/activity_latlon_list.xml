<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
>
    <ImageView
            android:id="@+id/emptyImgLatLonList"
            android:layout_width="@dimen/empty_state_pic"
            android:layout_height="@dimen/empty_state_pic"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/empty_state"
    />
    <TextView
            android:id="@+id/emptyTextLatLonList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_is_empty"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_big"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/emptyImgLatLonList"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerLatLonList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />

    <ImageView android:layout_width="@dimen/icon_size_big"
               android:layout_height="@dimen/icon_size_big"
               android:id="@+id/cleanLatLonList"
               android:src="@drawable/ic_delete"
               android:layout_alignParentEnd="true"
               android:layout_alignParentBottom="true"
               android:layout_margin="@dimen/custom_margin_17"
    />

</RelativeLayout>