<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
>
    <ImageView
            android:id="@+id/emptyImgLatLonList"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/empty_state"
    />
    <TextView
            android:id="@+id/emptyTextLatLonList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List is empty"
            android:textColor="#000"
            android:visibility="gone"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/emptyImgLatLonList"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerLatLonList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />
    <ImageView android:layout_width="64dp"
               android:layout_height="64dp"
               android:id="@+id/cleanLatLonList"
               android:src="@drawable/ic_delete"
               android:layout_alignParentEnd="true"
               android:layout_alignParentBottom="true"
               android:layout_margin="16dp"
    />

</RelativeLayout>