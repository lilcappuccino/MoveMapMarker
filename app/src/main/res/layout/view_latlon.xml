<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_margin="8dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/markerModelView"
            app:srcCompat="@drawable/marker"/>
    <TextView
            android:id="@+id/indexLatModelView"
            android:layout_toEndOf="@+id/markerModelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="17dp"
            android:textStyle="normal"
            android:textColor="#000000"
            tools:text="1"/>
    <TextView
            android:id="@+id/titleLatModelView"
            android:layout_toEndOf="@+id/indexLatModelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:text="@string/view_model_lat_lon_lat_title"/>
    <TextView

            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/textLatModelView"
            android:layout_toRightOf="@+id/titleLatModelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            tools:text="0.0"/>
    <TextView
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/titleLonModelView"
            android:layout_toEndOf="@+id/textLatModelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:text="@string/view_model_lat_lon_lon_title"/>
    <TextView
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:id="@+id/textLonModelView"
            android:layout_toEndOf="@+id/titleLonModelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            tools:text="0.0"/>
    <View
            android:layout_below="@id/markerModelView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F44336"/>

</RelativeLayout>