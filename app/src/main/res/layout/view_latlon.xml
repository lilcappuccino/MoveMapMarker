<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_margin="@dimen/margin"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:id="@+id/markerModelView"
            app:srcCompat="@drawable/marker"/>
    <TextView
            android:id="@+id/indexLatModelView"
            android:layout_toEndOf="@+id/markerModelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="@dimen/custom_margin_17"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            tools:text="1"/>
    <TextView
            android:id="@+id/titleLatModelView"
            android:layout_toEndOf="@+id/indexLatModelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginTop="@dimen/margin"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:text="@string/view_model_lat_lon_lat_title"/>
    <TextView

            android:layout_marginTop="@dimen/margin"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/big_margin"
            android:id="@+id/textLatModelView"
            android:layout_toEndOf="@+id/titleLatModelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:textColor="@android:color/black"
            tools:text="0.0"/>
    <TextView
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginTop="@dimen/margin"
            android:id="@+id/titleLonModelView"
            android:layout_toEndOf="@+id/textLatModelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:textColor="@color/violet"
            android:text="@string/view_model_lat_lon_lon_title"/>
    <TextView
            android:layout_marginTop="@dimen/margin"
            android:layout_marginEnd="@dimen/big_margin"
            android:layout_marginStart="@dimen/margin"
            android:id="@+id/textLonModelView"
            android:layout_toEndOf="@+id/titleLonModelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:textColor="@android:color/black"
            tools:text="0.0"/>
    <View
            android:layout_below="@id/markerModelView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>

</RelativeLayout>